<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jamesb.dopeplayer.TraditionalActivity"
    android:background="#FFFFFF"
    tools:ignore="GradleDependency">

    <include
        android:id="@+id/top_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/base_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center">

        <ImageButton
            android:id="@+id/button_previous"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            design:srcCompat="@drawable/ic_skip_previous_black_48dp" />

        <ImageButton
            android:id="@+id/button_play"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            design:srcCompat="@drawable/ic_play_arrow_black_48dp" />

        <ImageButton
            android:id="@+id/button_next"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            design:srcCompat="@drawable/ic_skip_next_black_48dp" />
    </LinearLayout>



</RelativeLayout>
